<MainWindow>:
    orientation: 'vertical'
    log_label: log_label
    table: table
    title: title
    ActionBar:
        pos_hint: {'top':1}
        # size_hint_y: 0.08
        # text_size: root.height / 2
        ActionView:
            use_separator: True
            ActionPrevious:
                id: title
                with_previous: False
            ActionButton:
                text: _('Both')
            ActionButton:
                text: _('Switch')
                on_press: root.switch_week()
            ActionGroup:
                text: 'Types'
                ActionButton:
                    id: group_button
                    group: 'type'
                    text: _('Group')
                    icon: './static/group.png'
                    on_press: root.show_group_popup()
                ActionButton:
                    id: teacher_button
                    group: 'type'
                    text: _('Teacher')
                    icon: './static/teacher.png'
                    on_press: root.show_teacher_popup()
                ActionButton:
                    id: room_button
                    group: 'type'
                    text: _('Room')
                    icon: './static/room.png'
                    on_press: root.show_room_popup()
            ActionGroup:
                mode: 'spinner'
                text: _('Menu')
                ActionButton:
                    text: _('Login')
                    on_press: root.show_login_popup()
                ActionButton:
                    text: _('Logout')
                    on_press: root.logout()
                # ActionButton:
                    # text: _('Save')
                    # on_press: root.save_table()
                ActionButton:
                    text: _('Exit')
                    on_press: app.stop()
    BoxLayout:
        id: table
    Label:
        id: log_label
        size_hint_y: 0.05
        pos_hint: {'bottom': 1}
        font_size: root.log_label.height * 0.8
        padding_x: 10
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1.0
            Rectangle:
                pos: self.pos
                size: self.size