# popups
<HugePopup@Popup>:
    size_hint: 0.3, 0.3
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: root.label_text
        Button:
            text: root.first_button_label
            on_press: root.first_button(root)
        Button:
            text: root.second_button_label
            on_press: root.second_button(root)

<LoginPopup>:
    size_hint: .3, .3
    auto_dismiss: False
    title: 'Login form'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: "Input full name/cypher"
        TextInput:
            text: "password(if teacher)"
        Button:
            text: "Accept"
            on_press: root.dismiss()

# lessons
<Lesson@Button>:
    font_size: self.height/11
    markup: True

# schedule

<LessonBar@ActionBar>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Action Bar'
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Prev'
        ActionButton:
            text: 'Next'
        ActionButton:
            text: 'Back'
        ActionGroup:
            text: 'Scales'
            allow_no_selection: False
            ActionToggleButton:
                group: 'scale'
                text: 'Week'
                icon: './static/group.png'
            ActionToggleButton:
                group: 'scale'
                text: 'Day'
                icon: './static/teacher.png'
            ActionToggleButton:
                group: 'scale'
                text: 'Lesson'
                icon: './static/room.png'
        ActionGroup:
            text: 'Types'
            allow_no_selection: False
            ActionToggleButton:
                group: 'type'
                text: 'Group'
                icon: './static/group.png'
            ActionToggleButton:
                group: 'type'
                text: 'Teacher'
                icon: './static/teacher.png'
            ActionToggleButton:
                group: 'type'
                text: 'Room'
                icon: './static/room.png'
        ActionGroup:
            mode: 'spinner'
            text: 'Menu'
            ActionButton:
                text: 'Login'
                size_hint_y: None
                height: 40
            ActionButton:
                text: 'Update DB'
                size_hint_y: None
                height: 40
            ActionButton:
                text: 'Logout'
                size_hint_y: None
                height: 40
            ActionButton:
                text: 'Exit'
                size_hint_y: None
                height: 40
                on_press: app.stop()

<LessonDay@BoxLayout>:

<LessonTable@BoxLayout>:
    orientation: vertical
    size_hint: 1.0, 1.0