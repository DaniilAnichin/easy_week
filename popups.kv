<ChoicePopup>:
    size_hint: .3, .3
    choice_btn: choice_btn
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: choice_btn
            text: root.btn_text
        Button:
            text: 'Accept'
            on_press: root.on_release(root.choice_btn.text)
            on_release: root.dismiss()

<LessonPopup>:
    size_hint: .5, .5
    title: 'Editing lesson'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: "Input full name/cypher"
        TextInput:
        Button:
            text: "Accept"
            on_release: root.dismiss()

<LoginPopup>:
    size_hint: .3, .3
    title: 'Login form(Second field is password, if you are a teacher)'
    login_input: login_input
    password_input: password_input
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: login_input
            text: "Input full name/cypher"
        TextInput:
            id: password_input
            password: True
        Button:
            text: "Accept"
            on_press: root.accept(root.login_input.text, root.password_input.text)
            on_release: root.dismiss()