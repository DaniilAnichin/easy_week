<ChoicePopup>:
    size_hint: .3, .3
    choice_input: choice_input
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: choice_input
            text: root.btn_text
        Button:
            text: _('Accept')
            on_press: root.on_release(root.choice_input.text)
            on_release: root.dismiss()

<LoginPopup>:
    size_hint: .3, .3
    title: _('Login form')
    login_input: login_input
    password_input: password_input
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: login_input
            text: _('Input username')
        TextInput:
            id: password_input
            password: True
        Button:
            text: _('Accept')
            on_press: root.accept(root.login_input.text, root.password_input.text)
            on_release: root.dismiss()